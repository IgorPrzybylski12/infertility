<div id="<%= dom_id ds_author %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Fullname:</strong>
    <%= ds_author.fullname %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this ds author", ds_author, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this ds author", edit_ds_author_path(ds_author), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
