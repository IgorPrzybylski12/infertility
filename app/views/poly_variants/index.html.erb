<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
<% end %>

<div class="flex justify-between items-center">
  <h1 class="font-bold text-4xl">Poly variants</h1>
  <%= link_to "New poly variant", new_poly_variant_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
</div>

<div>
  <%= search_form_for @q, url: search_poly_variants_path  do |f| %>
    <div>
      <div>
        <%= f.select :m, options_for_select([["Any", "or"], ["All", "and"]], params[:q]&.dig(:m)), { include_blank: false } %>
      
        <%= f.label :field_name_cont, "Search by Field" %>
        <%= f.select :name_cont, options_for_select([["PolyVariant Name", "name"], ["Gene Name", "genes_name"], ["GeneProduct Name", "genes_gene_products_name"], ["Protein Name", "genes_gene_products_proteins_name"], ["MiRNA Name", "genes_gene_products_mi_rnas_name"], ["Disorder Name", "disorders_name"]], params[:q]&.dig(:g)), { include_blank: false } %>
      </div>
      <div>
        <%= f.label :name_cont, "Contains" %>
        <%= f.text_field :name_cont, class: "form-input mt-1 block w-full" %>
      </div>
    </div>
    <div>
      <%= f.submit "Search", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>

<%= form_with(model: @poly_variant, url: hello_test_poly_variants_path) do |form| %>
  <%= form.submit "SUBMIT TEST", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
<% end %>


