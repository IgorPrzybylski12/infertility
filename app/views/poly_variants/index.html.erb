
<%= tag.header link_to_toggle_search_modes %>

<%= search_form_for @search do |f| %>

  <%= tag.fieldset do %>
    <%= tag.legend 'User' %>
    <%= tag.ul do %>
      <%= tag.li do %>
        <%= f.label :name_cont %>
        <%= f.text_field :name_cont %>
      <% end %>
    <% end %>
  <% end %>

  <%= tag.fieldset do %>
    <%= tag.legend "User's Posts" %>
    <%= tag.ul do %>
      <%= tag.li do %>
        <%= f.label :genes_name_cont %>
        <%= f.text_field :genes_name_cont %>
      <% end %>

      <%= tag.li do %>
        <%= f.label :genes_gene_products_proteins_name_cont %>
        <%= f.text_field :genes_gene_products_protein_name_cont %>
      <% end %>
      
    <% end %>
  <% end %>

  <%= display_distinct_label_and_check_box %>
  <%= f.submit class: 'btn btn--invert' %>
<% end %>

<%= render 'results' %>

