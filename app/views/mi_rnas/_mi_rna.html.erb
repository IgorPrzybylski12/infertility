<div id="<%= dom_id mi_rna %>">    
  <h1 class="text-2xl">miRNA:</h1>         
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= mi_rna.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= mi_rna.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this mi rna", mi_rna, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this mi rna", edit_mi_rna_path(mi_rna), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
