<div id="<%= dom_id disorder %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= disorder.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= disorder.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Gender:</strong>
    <%= disorder.gender %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this disorder", disorder, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this disorder", edit_disorder_path(disorder), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
