<%= form_with(model: disorder, class: "contents") do |form| %>
  <% if disorder.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(disorder.errors.count, "error") %> prohibited this disorder from being saved:</h2>

      <ul>
        <% disorder.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_area :name, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :gender %>
    <div class="flex items-center mt-2">
      <%= form.check_box :male, class: "form-checkbox h-5 w-5 text-gray-600" %>
      <span class="ml-2 text-gray-700">Male</span>
      <%= form.check_box :female, class: "form-checkbox h-5 w-5 text-gray-600 ml-4" %>
      <span class="ml-2 text-gray-700">Female</span>
    </div>
  </div>


  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
