<div id="<%= dom_id data_source %>" class="text-center">
  <h1 class="text-2xl">Data Source:</h1>
  <p class="my-5">
    <strong class="block font-medium mb-1">Type:</strong>
    <%= data_source.type %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= data_source.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">ref_number:</strong>
    <%= data_source.ref_number %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Url:</strong>
    <%= data_source.url %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">File path:</strong>
    <%= data_source.file_path %>
  </p>

 <p class="my-5">
    <strong class="block font-medium mb-1">Authors:</strong>
    <% data_source.ds_authors_ids.each do |ds_author_id| %>
      <% if @ds_authors %>
        <% @ds_authors.each do |ds_author| %>
            <% if ds_author.id == ds_author_id%>
                <%= ds_author.fullname %><br>
            <% end %>
        <% end %>
      <% end %>
    <% end %>
</p>

  <% if action_name != "show" %>
    <%= link_to "Show this data source", data_source, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this data source", edit_data_source_path(data_source), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
